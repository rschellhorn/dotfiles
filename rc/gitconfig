[core]
  excludesfile = ~/.dotfiles/config/global_gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  co = checkout
  st = status
  ci = commit
  up = pull --ff-only
  br = branch
  df = diff
  lg = log -p
  aa = add --all
  unstage = reset HEAD
  new = ls-files --others --exclude-standard
  added = diff --cached --name-only
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  plre = pull --rebase
  ff = merge --ff-only
  newauthor = commit --amend --reset-author -C HEAD
  poes = push
  l = "!source ~/.dotfiles/script/githelpers && pretty_git_log"
  la = !git l --all
  hp = "!source ~/.dotfiles/script/githelpers && show_git_head"
  wtf = "!git commit -m \"$(curl -s whatthecommit.com/index.txt)\""
  scoreboard = "!git log | grep '^Author' | sort | uniq -ci | sort -r"
  ready = rebase -i @{u}
	d = difftool
	oldest-ancestor = !zsh -c 'diff --old-line-format= --new-line-format= <(git rev-list --first-parent \"${1:-master}\") <(git rev-list --first-parent \"${2:-HEAD}\") | head -1' -
[color]
  ui = true
  # diff = auto
  # status = auto
  # branch = auto

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"

[help]
  autocorrect = 1
[diff]
  renames = copies
	tool = vimdiff
	compactionHeuristic = true
[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[push]
  default = upstream
[branch]
  autosetuprebase = always
[http]
	postBuffer = 100m
[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
[url "git@heroku.com:"]
  insteadOf = heroku:
[credential]
  helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[user]
	name = Rob Schellhorn
	email = rob.schellhorn@gmail.com
[merge]
	tool = vimdiff
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[mergetool]
	keepBackup = false
[difftool]
	prompt = false
[rerere]
	enabled = 1
